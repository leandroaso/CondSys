@using CondSys.Models.Entidades
@model CondSys.Models.Entidades.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}
<style>
</style>

<div class="row">
    <div class="col-lg-offset-4 col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="text-center">Login</h4>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                <div class="form-group">
                    @Html.LabelFor(u => u.Login)
                    @Html.TextBoxFor(u => u.Login, new { @class = "form-control"})
                    @Html.ValidationMessageFor(u => u.Login)

                </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.Senha)
                        @Html.PasswordFor(u => u.Senha, new {@class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Senha)
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
